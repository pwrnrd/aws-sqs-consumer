{
	// extend your base config so you don't have to redefine your compilerOptions
	"extends": "./tsconfig.json",
	"compilerOptions": {
		// needed as per: https://github.com/typescript-eslint/typescript-eslint/issues/853
		"allowJs": true,
		"declaration": false,
		"checkJs": true
	},
	"include": ["./src/**/*.ts", "./__tests__/**/*.ts"]
}
